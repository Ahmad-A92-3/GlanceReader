<resources>

    <!-- Base application theme. -->
    <style name="Light" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="PivotLetter">
        <item name="android:textColor">@color/pivot_text</item>
    </style>

    <style name="SpritzTextStyle">
        <item name="android:background">#ffffffff</item>
        <item name="android:textColor">#ff1b1b1b</item>
    </style>

    <style name="SpritzTextStyle.Dark">
        <item name="android:background">#ff171717</item>
        <item name="android:textColor">#ffdddddd</item>
    </style>


</resources>
